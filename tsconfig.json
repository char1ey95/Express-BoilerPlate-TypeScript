{
	"compilerOptions": {
		"outDir": "./build",
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowJs": false,
		"removeComments": true,
		"typeRoots": ["./node_modules/@types"],
		"target": "ES6",
		"strict": true,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": false,
		"skipLibCheck": false,
		"paths": {
			"@main/*": ["src/main/*"],
			"@auth/*": ["src/auth/*"],
			"@users/*": ["src/users/*"]
		}
	},
	"exclude": ["node_modules", "**/*.test.ts", "interface"]
}
